{
  "name": "conductor-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Conductor monorepo - core framework and plugins",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run build && pnpm run test",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && changeset publish",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "dev:conductor": "pnpm --filter=@ensemble-edge/conductor dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "prettier": "^3.6.2",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.18.3"
}
