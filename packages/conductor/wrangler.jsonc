/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "conductor",
	"main": "src/index.ts",
	"compatibility_date": "2025-10-29",
	"observability": {
		"enabled": true
	},

	/**
	 * Environment Variables
	 */
	"vars": {
		"ENVIRONMENT": "development"
	},

	/**
	 * KV Namespaces - Cache storage
	 * Create with: wrangler kv:namespace create "CACHE"
	 */
	"kv_namespaces": [
		{
			"binding": "CACHE",
			"id": "preview_cache_namespace",
			"preview_id": "preview_cache_namespace"
		}
	],

	/**
	 * D1 Database - Structured data
	 * Create with: wrangler d1 create conductor-db
	 */
	// "d1_databases": [
	// 	{
	// 		"binding": "DB",
	// 		"database_name": "conductor-db",
	// 		"database_id": "your-db-id"
	// 	}
	// ],

	/**
	 * R2 Buckets - Object storage
	 * Create with: wrangler r2 bucket create conductor-storage
	 */
	// "r2_buckets": [
	// 	{
	// 		"binding": "STORAGE",
	// 		"bucket_name": "conductor-storage"
	// 	}
	// ],

	/**
	 * AI Gateway - LLM call management
	 */
	"ai": {
		"binding": "AI"
	}

	/**
	 * Analytics Engine - Telemetry
	 * Uncomment when ready to track metrics
	 */
	// "analytics_engine_datasets": [
	// 	{
	// 		"binding": "ANALYTICS"
	// 	}
	// ]
}